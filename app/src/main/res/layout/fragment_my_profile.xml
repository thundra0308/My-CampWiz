<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundaccent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardBackgroundColor="@color/backgroundaccent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/backgroundaccent"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/hdodenprofile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="progile image"
                    android:src="@drawable/ic_profileplaceholder"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/profilename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@color/backgroundaccent"
                        android:hint="Name"
                        android:textSize="17sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/profileemail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="false"
                        android:inputType="textPassword"
                        android:background="@color/backgroundaccent"
                        android:focusable="false"
                        android:hint="Email"
                        android:textSize="17sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/profilemobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/backgroundaccent"
                        android:hint="Mobile No."
                        android:inputType="phone"
                        android:textSize="17sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnupdate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    app:backgroundTint="@color/primary"
                    android:paddingTop="5dp"
                    app:cornerRadius="10dp"
                    android:paddingBottom="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="@string/update"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnsignoutmyprofile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/lf20_hxag47yo"
        app:lottie_loop="false"
        android:layout_margin="20dp"/>


</LinearLayout>